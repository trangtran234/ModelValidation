@model ModelValidation.Models.Appointment

@{
    ViewBag.Title = "Make A Booking";
}

<h4>Book an Appointment</h4>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <p>Your name: @Html.EditorFor(m => m.ClientName)</p> @Html.ValidationMessageFor(m => m.ClientName)
    <p>Appointment Date: @Html.EditorFor(m => m.Date)</p> @Html.ValidationMessageFor(m => m.Date)
    <p>@Html.EditorFor(m => m.TermsAccepted) I accept the terms & conditions</p> @Html.ValidationMessageFor(m => m.TermsAccepted)
    <input type="submit" value="Make Booking" />
}